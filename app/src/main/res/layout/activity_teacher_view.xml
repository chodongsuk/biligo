<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/banner_3"/>

    <ScrollView
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout

            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dip"
                android:background="@drawable/bg_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dip"
                    android:layout_height="113dip">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#232323"
                        android:id="@+id/textView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:paddingTop="10dip"
                        android:textSize="13sp"
                        android:textColor="#717171"
                        android:id="@+id/textView_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:paddingTop="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="강사레벨"
                            android:textSize="13sp"
                            android:textColor="#232323"
                            android:id="@+id/textView_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:paddingLeft="5dip"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/linearLayout_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출강사진"/>
                <LinearLayout
                    android:layout_marginTop="5dip"
                    android:id="@+id/linearLayout_sub_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 소개"/>
                <TextView
                    android:padding="5dip"
                    android:background="@drawable/bg_line"
                    android:layout_marginTop="5dip"
                    android:textSize="13sp"
                    android:textColor="#717171"
                    android:id="@+id/textView_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <CheckBox
                android:layout_marginTop="10dip"
                android:background="@color/app_color"
                android:textColor="#ffffff"
                android:id="@+id/checkbox"
                android:text="이용 약관 내용에 동의 하시겠습니까?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dip"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"/>

            <EditText
                android:layout_marginTop="10dip"
                android:padding="10dip"
                android:background="@drawable/bg_line"
                android:textColor="#232323"
                android:id="@+id/ediText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_color"/>

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"/>

            <EditText
                android:layout_marginTop="10dip"
                android:padding="10dip"
                android:background="@drawable/bg_line"
                android:textColor="#232323"
                android:id="@+id/ediText_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_color"/>

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"/>

            <EditText
                android:layout_marginTop="10dip"
                android:padding="10dip"
                android:background="@drawable/bg_line"
                android:textColor="#232323"
                android:id="@+id/ediText_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_color"/>

            <TextView

                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약 / 날짜 / 시간 / 메모"/>

            <EditText
                android:gravity="top"
                android:layout_marginTop="10dip"
                android:padding="10dip"
                android:background="@drawable/bg_line"
                android:textColor="#232323"
                android:id="@+id/ediText_content"
                android:layout_width="match_parent"
                android:layout_height="150dip"/>
            <View
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_color"/>

            <TextView
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#232323"
                android:text="입금계좌 안내 신한 110 - 446 - 237817  인더짐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="접수신청"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:id="@+id/button"/>


</LinearLayout>